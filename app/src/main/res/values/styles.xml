<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/varela_round_regular</item>
    </style>


    <style name="AppTheme.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/varela_round_regular</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextViewStyleBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewStyleRegular" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyleSmall" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextStyleRegular" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/et_shape</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
